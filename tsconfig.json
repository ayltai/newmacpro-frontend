{
    "extends"         : "@tsconfig/create-react-app/tsconfig.json",
    "include"         : [
        ".storybook/*.ts",
        ".storybook/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compilerOptions" : {
        "target"            : "es6",
        "esModuleInterop"   : true,
        "resolveJsonModule" : true,
        "types"             : [
            "jest",
            "mdx",
            "node",
            "@testing-library/jest-dom"
        ]
    }
}
